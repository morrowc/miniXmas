/*
 * Simple FastLED Example, 29 LED string.
 * Connect power/ground and data to D4.
 */

#include <Arduino.h>
#include "FastLED.h"

#define NUM_LEDS 30
// DataPin from:
// https://chewett.co.uk/blog/1066/pin-numbering-for-wemos-d1-mini-esp8266/
#define DATA_PIN 2

CRGB leds[NUM_LEDS];

void setup() {
  FastLED.addLeds<NEOPIXEL, DATA_PIN>(leds, NUM_LEDS);
}

void loop() {
  leds[0] = CRGB::Red;
  FastLED.show();
  delay(500);
  leds[0] = CRGB::Black;
  FastLED.show();
  delay(500);
}
